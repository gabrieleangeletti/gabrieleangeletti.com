---
import { FiHome, FiUser, FiFileText, FiMail } from "react-icons/fi";
---

<aside
  id="sidebar"
  class="fixed top-0 left-0 h-full w-48 bg-base-200 shadow-lg flex flex-col justify-between p-6 z-40 transform transition-transform duration-300 ease-in-out lg:translate-x-0 -translate-x-full"
>
  <div class="pt-16 lg:pt-0">
    <h1 class="text-2xl font-bold tracking-widest text-base-content">GABRIELE ANGELETTI</h1>
    <nav class="mt-12">
      <ul>
        <li class="mb-6">
          <a href="/" class="flex items-center text-base-content/70 hover:text-base-content">
            <FiHome className="mr-3" /> Home
          </a>
        </li>
        <li class="mb-6">
          <a href="/about" class="flex items-center text-base-content/70 hover:text-base-content">
            <FiUser className="mr-3" /> About
          </a>
        </li>
        <li class="mb-6">
          <a href="/blog" class="flex items-center text-base-content/70 hover:text-base-content">
            <FiFileText className="mr-3" /> Blog
          </a>
        </li>
        <li>
          <a href="/contact" class="flex items-center text-base-content/70 hover:text-base-content">
            <FiMail className="mr-3" /> Contact
          </a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="text-sm text-base-content/50">
    <p>&copy; 2025</p>
    <p>All rights reserved</p>
  </div>
</aside>
