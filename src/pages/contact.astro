---
import Layout from "../layouts/Layout.astro";
import AppShell from "../components/AppShell.astro";
import ContactForm from "../components/ContactForm";
import { FiMail, FiMapPin, FiClock, FiLinkedin, FiGithub } from "react-icons/fi";
---

<Layout
  title="Contact - Gabriele Angeletti"
  description="Get in touch with Gabriele Angeletti. Let's discuss software engineering, collaboration opportunities, or just say hello."
>
  <AppShell>
    <div id="contact" class="p-12">
      <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1 class="text-4xl font-bold text-base-content mb-4">
            Let's Build Something Amazing Together
          </h1>
          <p class="text-xl text-base-content/70 max-w-3xl mx-auto">
            Ready to turn your vision into reality? I'm here to help you build robust, intelligent
            software that moves the needle for your business. Let's discuss your project!
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h2 class="card-title text-2xl mb-6">Get In Touch</h2>

                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <div
                      class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center"
                    >
                      <FiMail className="text-primary" size={20} />
                    </div>
                    <div>
                      <p class="font-medium text-base-content">Email</p>
                      <a
                        href="mailto:hello@gabrieleangeletti.com"
                        class="text-primary hover:underline"
                      >
                        hello@gabrieleangeletti.com
                      </a>
                    </div>
                  </div>

                  <div class="flex items-center gap-4">
                    <div
                      class="flex-shrink-0 w-12 h-12 bg-secondary/10 rounded-full flex items-center justify-center"
                    >
                      <FiMapPin className="text-secondary" size={20} />
                    </div>
                    <div>
                      <p class="font-medium text-base-content">Location</p>
                      <p class="text-base-content/70">Remote</p>
                    </div>
                  </div>

                  <div class="flex items-center gap-4">
                    <div
                      class="flex-shrink-0 w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center"
                    >
                      <FiClock className="text-accent" size={20} />
                    </div>
                    <div>
                      <p class="font-medium text-base-content">Response Time</p>
                      <p class="text-base-content/70">Within 24 hours</p>
                    </div>
                  </div>
                </div>

                <div class="divider"></div>

                <div>
                  <h3 class="font-semibold text-base-content mb-4">Connect With Me</h3>
                  <div class="flex gap-4">
                    <a
                      href="https://www.linkedin.com/in/gabriele-angeletti/"
                      class="btn btn-circle btn-outline btn-sm"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <FiLinkedin size={16} />
                    </a>
                    <a
                      href="https://github.com/gabrieleangeletti"
                      class="btn btn-circle btn-outline btn-sm"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <FiGithub size={16} />
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Availability Card -->
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg mb-4">Current Availability</h3>
                <div class="space-y-3">
                  <div class="flex items-center gap-3">
                    <div class="w-3 h-3 bg-success rounded-full"></div>
                    <span class="text-base-content">Available for new projects</span>
                  </div>
                  <div class="text-base-content/70 text-sm">
                    <p>• Full-stack web applications</p>
                    <p>• AI/Machine Learning (agentic systems, predictive analytics, etc.)</p>
                    <p>• API development & integration</p>
                    <p>• System architecture consulting</p>
                    <p>• Technical audits & optimization</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <ContactForm client:load />
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-16">
          <div class="card bg-gradient-to-r from-primary/5 to-secondary/5 shadow-lg">
            <div class="card-body">
              <h3 class="text-2xl font-bold text-base-content mb-4">Ready to Get Started?</h3>
              <p class="text-base-content/70 mb-6 max-w-2xl mx-auto">
                I work with businesses of all sizes to create software solutions that drive growth.
                Whether you need a complete application or technical consultation, I'm here to help.
              </p>
              <div class="flex flex-wrap justify-center gap-4">
                <a
                  href="https://github.com/gabrieleangeletti/resume/raw/master/resume.pdf"
                  download="Gabriele_Angeletti_CV.pdf"
                  class="btn btn-outline"
                >
                  Download CV
                </a>
                <a
                  href="mailto:hello@gabrieleangeletti.com?subject=Project Inquiry"
                  class="btn btn-primary"
                >
                  Email Me Directly
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </AppShell>
</Layout>
