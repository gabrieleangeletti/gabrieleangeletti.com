---
import Layout from "../../layouts/Layout.astro";
import AppShell from "../../components/AppShell.astro";
import RunningVolume from "../../components/RunningVolume";

interface FitnessCard {
  title: string;
  description: string;
  href: string;
  category: string;
}

const fitnessCards: FitnessCard[] = [
  {
    title: "Achilles Tendon",
    description: "Guide to achilles tendon care, strengthening exercises, and injury prevention strategies.",
    href: "/fitness/training/achilles-tendon",
    category: "Injury",
  },
];

const sectionDescriptions: Record<string, string> = {
  Injury: "Rehab notes and return-to-running frameworks for common setbacks.",
  Training: "Workouts, drills, and strength protocols supporting running performance.",
  Recovery: "Rest strategies, mobility routines, and load-management experiments.",
  Health: "Nutrition, biomarker tracking, and broader wellness observations.",
};

const knowledgeSections = ["Injury", "Training", "Recovery", "Health"].map((category) => ({
  title: category,
  description: sectionDescriptions[category],
  cards: fitnessCards.filter((card) => card.category === category),
})).filter((section) => section.cards.length > 0);
---

<Layout
  title="Fitness - Gabriele Angeletti"
  description="Personal dashboard and knowledge base for training, recovery, and health optimization."
>
  <AppShell>
    <div class="p-4 lg:py-18">
      <div class="max-w-6xl mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-base-content mb-4">Fitness</h1>
          <p class="text-xl text-base-content/70 max-w-3xl mx-auto">
            Personal dashboard and knowledge base for training, recovery, and health optimization.
          </p>
        </div>

        <div class="space-y-16">
          <section class="relative rounded-3xl border border-sky-500/15 bg-gradient-to-br from-sky-500/15 via-base-100 to-base-100 p-8 shadow-xl shadow-sky-500/10">
            <div
              class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top,rgba(56,189,248,0.18),transparent_55%)]"
              aria-hidden="true"
            />
            <div class="relative flex flex-col gap-8">
              <header class="flex flex-col gap-3">
                <span class="text-xs font-semibold uppercase tracking-[0.35em] text-sky-500/80">
                  Running
                </span>
                <h2 class="text-3xl font-bold text-base-content">Performance workbook</h2>
              </header>
              <div class="grid gap-6 lg:grid-cols-1">
                <article class="relative overflow-hidden rounded-3xl border border-sky-500/10 bg-base-100/80 p-6 shadow-lg">
                  <div
                    class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(14,165,233,0.12),transparent_60%)]"
                    aria-hidden="true"
                  />
                  <div class="relative flex flex-col gap-4">
                    <div class="flex flex-col gap-1">
                      <h3 class="text-2xl font-semibold text-base-content">Weekly volume</h3>
                      <p class="text-sm text-base-content/60">
                        Weekly distance and elevation to highlight load trends.
                      </p>
                    </div>
                    <RunningVolume client:load showHeading={false} />
                  </div>
                </article>
              </div>
            </div>
          </section>

          {knowledgeSections.map((section) => (
            <section>
              <span class="text-xs font-semibold uppercase tracking-[0.35em] text-base-content/50">
                {section.title}
              </span>
              <div class="mt-3 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <h2 class="text-3xl font-bold text-base-content">{section.title}</h2>
                <p class="max-w-2xl text-base-content/60">{section.description}</p>
              </div>

              <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {section.cards.map((card) => (
                  <article class="card group bg-base-100 shadow-lg transition duration-300 hover:-translate-y-1 hover:shadow-2xl">
                    <div class="card-body">
                      <h3 class="card-title text-xl font-bold text-base-content">
                        {card.title}
                      </h3>
                      <p class="text-base-content/70 leading-relaxed">
                        {card.description}
                      </p>
                      <div class="card-actions justify-end">
                        <a href={card.href} class="btn btn-primary btn-sm">
                          View guide
                        </a>
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            </section>
          ))}
        </div>
      </div>
    </div>
  </AppShell>
</Layout>
